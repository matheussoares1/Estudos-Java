import java.util.Scanner;

public class Collatz {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Digite um número inteiro: ");
        int x = input.nextInt();

        while (x != 1) {
            System.out.print(x + " -> ");

            if (x % 2 == 0) {
                x /= 2;
            } else {
                x = 3 * x + 1;
            }
        }

        System.out.println(x);
    }
}
}
